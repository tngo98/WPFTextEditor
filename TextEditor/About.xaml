<Window x:Class="TextEditor.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="About" Height="225" Width="225" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center">
            <LineBreak/>
            Text Editor
            <LineBreak/>
            Version: 1.0
            <LineBreak/>
            © 2020 Tommy Ngo
            <LineBreak/>
            All Rights Reserved.
            <LineBreak/>
            <LineBreak/>
            This is an application that allows 
            <LineBreak/>
            users to create, open, edit, and 
            <LineBreak/>
            save text documents.
        </TextBlock>
        <Button Grid.Row="1" Height="20" Width="75" Content="OK" Click="Close_About_Click" />
    </Grid>
</Window>
